---
const socials = [
  {
    name: 'X / Twitter',
    href: 'https://x.com/jaren11111',
  },
  {
    name: 'YouTube',
    href: 'https://youtube.com/@imjaren',
  },
  {
    name: 'GitHub',
    href: 'https://github.com/jarenm1',
  },
] as const;

const pages = [
  {
    name: 'Home',
    href: '/',
  },
  {
    name: 'Bookmarks',
    href: '/bookmarks',
  }
]

---

<nav class="border-b border-neutral-800 bg-neutral-900 text-neutral-100">
  <div class="mx-auto flex max-w-3xl items-center justify-between px-4 py-3">
    <div class="flex items-center gap-8 text-sm">
      {pages.map(({ name, href }) => (
        <a href={href} class="text-xl font-courier-prime tracking-tight hover:text-neutral-50">
          {name}
        </a>
      ))}
    </div>
    <div class="flex items-center gap-2 text-sm">
      {socials.map(({ name, href }) => (
        <a
          href={href}
          class="flex items-center gap-2 rounded px-3 py-1 transition hover:bg-neutral-800 hover:text-neutral-50"
          target="_blank"
          rel="noreferrer"
          aria-label={name}
        >
          {name}
        </a>
      ))}
    </div>
  </div>
</nav>
